{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020"],
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "./dist",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": true,
      "skipLibCheck": true,
      "types": ["node", "hardhat"]
    },
    "include": [
      "./scripts",
      "./test",
      "./typechain-types",
      "./hardhat.config.ts"
    ],
    "exclude": ["node_modules", "dist", "artifacts", "cache"]
  }
  